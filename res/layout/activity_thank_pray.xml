<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_backgroud_color"
    android:orientation="vertical" >

    <com.yisa.pray.views.CustomHeadView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_size"
        android:layout_alignParentTop="true"
        app:headTitle="@string/thanks_pray" >
    </com.yisa.pray.views.CustomHeadView>

    <Button 
        android:id="@+id/thank_pray_batch_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="@string/thank_pray_batch"
        android:background="@color/head_bg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/app_text_size_14"
        android:gravity="center"
        android:visibility="gone"/>
    <RelativeLayout 
        android:id="@+id/no_content_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_view"
        android:layout_above="@id/thank_pray_batch_btn"
        android:background="@drawable/tips_no_bg"
        android:visibility="gone">
        <TextView 
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_size_14"
            android:text="@string/tips_no_reciver_pray_person"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.yisa.pray.views.swipe.SwipyRefreshLayout
        android:id="@+id/swipy"
        android:layout_below="@id/head_view"
        android:layout_above="@id/thank_pray_batch_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </com.yisa.pray.views.swipe.SwipyRefreshLayout>
</RelativeLayout>