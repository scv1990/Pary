<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <com.yisa.pray.views.MyImageView
        android:id="@+id/parent_image"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/albums_bg"
        android:padding="10dip"
        android:scaleType="fitXY"
        android:layerType="software"
        android:src="@drawable/upload_pic_default" />

    <TextView
        android:id="@+id/parent_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/albums_icon_bg"
        android:gravity="center"
        android:textColor="@color/list_item_4f4f4f"
        />

    <TextView
        android:id="@+id/parent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/parent_image"
        android:layout_toRightOf="@+id/parent_image"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/list_item_4f4f4f"
        android:textSize="@dimen/app_text_size_16" />
</RelativeLayout>