<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height_size"
    android:background="@color/head_bg"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <ImageView
        android:id="@+id/header_back"
        android:layout_width="@dimen/header_height_size"
        android:layout_height="@dimen/header_height_size"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:src="@drawable/mm_title_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/header_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/header_text_color"
        android:textSize="@dimen/app_text_size_16"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/header_text_color"
        android:textSize="@dimen/app_text_size_20" />
    
    <ImageView
        android:id="@+id/header_second_right_icon"
        android:layout_width="@dimen/header_height_size"
        android:layout_height="@dimen/header_height_size"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@id/header_title"
        android:layout_toLeftOf="@+id/header_right_icon"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/header_right_icon"
        android:layout_width="@dimen/header_height_size"
        android:layout_height="@dimen/header_height_size"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/header_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/header_text_color"
        android:textSize="@dimen/app_text_size_16"
        android:visibility="gone" />

</RelativeLayout>